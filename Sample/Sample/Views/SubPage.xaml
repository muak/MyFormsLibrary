<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    NavigationPage.BackButtonTitle=""
    xmlns:cr="clr-namespace:MyFormsLibrary.CustomRenderers;assembly=MyFormsLibrary"
    x:Class="Sample.Views.SubPage" Title="SubPage">
    
    <!--<NavigationPage.TitleView>
        <ContentView HorizontalOptions="FillAndExpand">
            <Label Text="SubPage" HorizontalTextAlignment="Center" VerticalOptions="Center" />
        </ContentView>
    </NavigationPage.TitleView>-->
    <ContentPage.ToolbarItems>
        <cr:ToolbarItemEx Text="abc" />
        <cr:ToolbarItemEx Text="def" />
    </ContentPage.ToolbarItems>
        
    
    <cr:NonSelectionListView ItemsSource="{Binding ItemsSource}" SeparatorColor="Red" LoadMoreCommand="{Binding LoadMoreCommand}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Label Text="{Binding}" />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.Footer>
            
                <ActivityIndicator HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="16" WidthRequest="16" Color="Red" IsRunning="True" IsVisible="{Binding IsLoading.Value}" Margin="6" />
            
        </ListView.Footer>
    </cr:NonSelectionListView>
</ContentPage>
